@page
@model VC.Wallet.WebApp.Areas.HolderDID.Pages.DetailsModel
@{
    ViewData["Title"] = "DID Details";
}

<div class="card shadow rounded">
    <div class="card-header">
        <h3><a asp-page="./Index"><i class="bi bi-arrow-left-circle"></i></a> @ViewData["Title"]</h3>
    </div>
    <div class="card-body">
        @if (!string.IsNullOrEmpty(Model?.ErrorMessage))
        {
            <div class="alert alert-danger">
                <p>ERROR: @Model.ErrorMessage</p>
            </div>
        }
        else
        {
            <div class="card">
                <div class="card-body">
                    <p><i class="bi bi-file-medical mt-3"></i> This is your DID</p>
                    <div class="bg-light p-3">
                        <p>@Model?.HolderDID?.did</p>
                    </div>
                </div>
            </div>
        }
    </div>

</div>

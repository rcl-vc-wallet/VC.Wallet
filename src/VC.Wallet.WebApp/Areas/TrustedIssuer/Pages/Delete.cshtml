@page
@model VC.Wallet.WebApp.Areas.TrustedIssuer.Pages.DeleteModel
@{
    ViewData["Title"] = "Delete Trusted Issuer";
}

<div class="card shadow rounded mb-5 mt-2">
    <div class="card-header">
        <h3><a asp-page="./Index"><i class="bi bi-arrow-left-circle"></i></a> @ViewData["Title"]</h3>
    </div>
    <div class="card-body">
        @if (!string.IsNullOrEmpty(Model?.ErrorMessage))
        {
            <div class="alert alert-danger">
                <p>ERROR: @Model.ErrorMessage</p>
            </div>
        }
        else
        {
            <h3>Are you sure you want to delete this?</h3>
            <div>
                <h4>Trusted Issuer</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        Name
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.TrustedIssuer.name)
                    </dd>
                    <dt class="col-sm-2">
                        Description
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.TrustedIssuer.description)
                    </dd>
                 
                </dl>
                <form method="post" id="frm_delete">
                    <input type="hidden" asp-for="TrustedIssuer.id" />
                    <input type="submit" value="Delete" class="btn btn-danger" /> <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
                </form>
            </div>
        }
    </div>
</div>
